# Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@nextrip.mongodb.net/nextrip-database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@nextrip.in

# Supabase Configuration (for image uploads and storage)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Rate Limiting
MAX_REQUESTS_PER_HOUR=100

# Password Reset
PASSWORD_RESET_EXPIRES_IN=10

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000